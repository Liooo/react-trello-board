*
  box-sizing border-box

.desk, .desk-placeholder, .desk-placeholder:hover
  width: 100%
  min-height 211px
  background-color #e2e4e6
  box-shadow 1px 1px 1px rgba(0,0,0,.5)
  border-radius 3px
  margin 10px 0
  vertical-align top

.desk-items
  padding 20px
  width: 100%
  min-height inherit
  overflow-x auto
  white-space nowrap

.draggable-card, .placeholder
  display inline-block

.item
  margin-right 10px
  overflow hidden
  border solid 1px
  height 150px
  width 200px
  background #fff
  border-radius 5px
  box-shadow 1px 1px 1px rgba(0,0,0,.3)
  transition 0.15s
  cursor pointer
  &.placeholder, &.placeholder:hover
    background-color rgba(208,208,208,1)
  &:hover
    background #f7f7f7
